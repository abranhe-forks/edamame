@font-face {
  font-family: "Gilroy";
  src: url("/Gilroy-Light.otf") format("truetype");
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: "Gilroy";
  src: url("/Gilroy-ExtraBold.otf") format("truetype");
  font-weight: bold;
  font-style: normal;
}

body {
    font-family: Gilroy;
    font-weight: 400;
}

p{
    font-weight: 400;
}

input[type="text"], input[type="email"], input[type="number"], input[type="tel"]{
    -webkit-appearance: none;
    border-radius: 0;
  }

textarea {
  resize: none;
  -webkit-appearance: none;
  border-radius: 0;
}

select {
  -webkit-appearance: none;
  -webkit-border-radius: 0px;
  border-radius: 0;
  padding: 10px;
  background-origin: content-box;
  background: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='100' height='100' fill='%79000000'><polygon points='0,0 100,0 50,50'/></svg>")no-repeat right;
  background-position: calc(100% - 20px) center;
  background-size: 12px;
  background-color: #ffffff;
}
